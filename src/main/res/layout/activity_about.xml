<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".AboutActivity"
    android:background="@color/bg">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="216dp"
            android:layout_height="91dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/gmi" />

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/tagline"
            android:layout_marginBottom="45dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAlignment="center"
            android:lineSpacingExtra="-8dp"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#000000"
            android:padding="8dp"
            android:layout_margin="4dp">

            <TextView
                android:text="1991"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="ESTABLISHED"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FF0000"
            android:padding="8dp"
            android:layout_margin="4dp">

            <TextView
                android:text="2008"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="RELOCATED TO KAJANG"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#FFD700"
            android:padding="8dp"
            android:layout_margin="4dp">

            <TextView
                android:text="#1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:text="PIONEER IN GERMAN TVET IN MALAYSIA"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/overview"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="ABOUT GMI"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/overview1"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:justificationMode="inter_word"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="45dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/gmi"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gmi2"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="45dp">

            <TextView
                android:text="Grand Opening By Tun Dr Mahathir Mohamad @ German Malaysian Institute - 1992"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/opaque_dark_grey"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gmi1"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="45dp">

            <TextView
                android:text="German Malaysian Institute, Shamelin - 1992"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/opaque_dark_grey"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/gmi3"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_marginBottom="45dp">

            <TextView
                android:text="German Malaysian Institute, Kajang\n2008 until now"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/opaque_dark_grey"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <!--separator line-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <!-- contact information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact Information"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:justificationMode="inter_word"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="3dp"
            android:text="German-Malaysian Institute (199201016476)"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/address"
            android:textColor="@color/blue"
            android:textSize="13sp"
            android:clickable="true"
            android:focusable="true"
            android:autoLink="map"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginBottom="45dp"
                app:srcCompat="@drawable/phone" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Phone:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactPhone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:autoLink="phone"
                android:text="+603-8921 9000 / 9191 / 9046 / 9322"
                android:textColorLink="@color/blue"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="17dp"
                android:layout_marginBottom="45dp"
                app:srcCompat="@drawable/fax" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Fax:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactFax"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="+603-8921 9001"
                android:textColor="@color/blue"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginBottom="45dp"
                app:srcCompat="@drawable/email" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:autoLink="email"
                android:text="marketing@gmi.edu.my"
                android:textColorLink="@color/blue"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
