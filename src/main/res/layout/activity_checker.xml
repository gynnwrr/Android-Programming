<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".CheckerActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="ELIGIBILITY CHECKER"
            android:textAlignment="center"
            android:textColor="@color/red"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Type of Qualification -->
        <TextView
            android:text="Educational Qualification"
            android:textStyle="bold"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:textColor="@color/blue"
            android:textSize="18sp"/>

        <Spinner
            android:id="@+id/spinnerEducation"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bahasa Inggeris"
            android:textColor="@color/black"
            android:textSize="13sp"/>

        <!-- Universal Subject -->
        <TextView
            android:text="Universal Subject"
            android:textStyle="bold"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/blue"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bm"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Bahasa Melayu"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/gradeBM"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Bahasa Inggeris"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/gradeBI"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/maths"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Matematik"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/gradeMaths"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sej"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Sejarah"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/gradeSej"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Science/Technical/Vocation -->
        <TextView
            android:text="Science/Technical/Vocational"
            android:textStyle="bold"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/blue"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/Sc1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/gradeSc1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/Sc2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/gradeSc2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Best Other Subjects -->
        <TextView
            android:text="Best Other Subject"
            android:textStyle="bold"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/blue"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/best1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/gradeBest1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_weight="1" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/best2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/gradeBest2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/checkBtn"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="45dp"
            android:lineSpacingExtra="3dp"
            android:backgroundTint="@color/red"
            android:text="CALCULATE"
            android:textSize="18sp"
            android:layout_gravity="center"
            app:cornerRadius="10dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>