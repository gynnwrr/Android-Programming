<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".ProgramActivity"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/gmi"
        android:layout_width="216dp"
        android:layout_height="91dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/gmi" />

    <TextView
        android:id="@+id/programmesText"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Welcome to the Official German-Malaysian Institute App !!"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:justificationMode="inter_word"
        android:text="@string/tagline"
        android:layout_marginBottom="30dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textAlignment="center"
        android:lineSpacingExtra="-8dp"/>

    <Button
        android:id="@+id/progBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:text="PROGRAMMES OFFERED"
        android:backgroundTint="@color/blue"
        android:textSize="18sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/checkBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="30dp"
        android:text="ELIGIBILITY CHECKER"
        android:textSize="18sp"
        android:backgroundTint="@color/blue"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/moreBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="MORE ABOUT US"
        android:textSize="18sp"
        android:backgroundTint="@color/blue"
        app:cornerRadius="10dp" />

    <!--separator line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray" />

    <!-- contact information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact Information"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    </LinearLayout>

    <TextView
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:justificationMode="inter_word"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="3dp"
            android:text="German-Malaysian Institute (199201016476)"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textAlignment="center"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="3dp"
        android:text="@string/address"
        android:textColor="@color/blue"
        android:textSize="13sp"
        android:clickable="true"
        android:focusable="true"
        android:autoLink="map"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="18dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="15dp"
            android:layout_marginBottom="45dp"
            app:srcCompat="@drawable/phone" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Phone:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactPhone"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="+603-8921 9000 / 9191 / 9046 / 9322"
            android:textColorLink="@color/blue"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="17dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="17dp"
            android:layout_marginBottom="45dp"
            app:srcCompat="@drawable/fax" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Fax:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactFax"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="+603-8921 9001"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="17dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_marginBottom="45dp"
            app:srcCompat="@drawable/email" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contactEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="marketing@gmi.edu.my"
            android:textColorLink="@color/blue"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

</LinearLayout>
