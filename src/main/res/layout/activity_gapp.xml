<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".FoundationActivity"
    android:background="@color/bg">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/alevel" />

            <TextView
                android:id="@+id/title"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="GERMAN A LEVELS PREPARATORY PROGRAMME (GAPP)"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/red"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="PROGRAMME OVERVIEW"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/overview1"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:justificationMode="inter_word"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="3dp"
                android:text="Students will undergo a 22-month preparatory programme at GMI, and also a 6-month intensive German Language training at various language centres in Germany before they are accepted for enrolment at the University of Applied Sciences (UAS)."
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/program"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="6 - MONTH PROGRAMME AT LANGUAGE CENTRES IN GERMANY"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/program1"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-12dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/gapp"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/application"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:text="APPLICATION"
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/application1"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-12dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/application"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DURATION:"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="4 Semesters"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEES:"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fee1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="RM 40,000"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="*subject to change"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <Button
                android:id="@+id/checkBtn"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="45dp"
                android:lineSpacingExtra="3dp"
                android:backgroundTint="@color/red"
                android:text="CHECK YOUR\nELIGIBILITY NOW!"
                android:textSize="18sp"
                android:layout_gravity="center"
                app:cornerRadius="10dp"
                android:textStyle="bold" />

        </LinearLayout>



    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>